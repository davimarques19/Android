<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="15dp">

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desenvolvedores"
        android:textSize="40sp"
        android:gravity="center"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/txt_1">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <ImageButton
            android:id="@+id/img_button"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/davi"
            android:scaleType="fitCenter"/>

        <Button
            android:id="@+id/bt_davi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Davi Marques"
            android:layout_below="@id/img_button"
            android:textSize="30sp"
            android:gravity="center"
            android:onClick="Davi"/>

        <ImageButton
            android:id="@+id/img_button2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/bt_davi"
            android:src="@drawable/download"
            android:background="@null"
            android:scaleType="fitCenter"/>

        <Button
            android:id="@+id/bt_davi2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Davi Marques"
            android:layout_below="@id/img_button2"
            android:textSize="30sp"
            android:gravity="center"
            android:onClick="Davi"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
